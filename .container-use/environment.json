{
  "workdir": "/workdir",
  "base_image": "elixir:1.18.4-alpine",
  "setup_commands": [
    "apk add --no-cache build-base git nodejs npm postgresql-client inotify-tools",
    "mix local.hex --force",
    "mix local.rebar --force",
    "mix archive.install hex phx_new --force"
  ],
  "env": [
    "MIX_ENV=dev",
    "PORT=4000"
  ],
  "services": [
    {
      "name": "postgres",
      "image": "postgres:17",
      "exposed_ports": [
        5432
      ],
      "env": [
        "POSTGRES_USER=postgres",
        "POSTGRES_PASSWORD=postgres",
        "POSTGRES_DB=gatherly_dev"
      ]
    }
  ]
}