        </div>
      </div>
    `;
    document.body.appendChild(modal);
    
    // Close on click outside
    modal.addEventListener('click', (e) => {
      if (e.target === modal) closeModal();
    });
  }

  function scheduleDemo() {
    const modal = document.createElement('div');
    modal.className = 'fixed inset-0 bg-black/50 flex items-center justify-center z-50 backdrop-blur-sm';
    modal.innerHTML = `
      <div class="card bg-base-100 shadow-2xl max-w-md mx-4 animate-fade-in">
        <div class="card-body text-center">
          <h3 class="text-2xl font-bold mb-4">ðŸ“ž Schedule a Demo</h3>
          <p class="text-base-content/80 mb-6">
            Ready to see Gatherly in action? We'd love to show you how our AI-powered platform 
            can transform your event planning experience.
          </p>
          <div class="card-actions justify-center gap-2">
            <button onclick="closeModal()" class="btn btn-outline">Maybe Later</button>
            <button onclick="contactUs()" class="btn btn-primary">Contact Us</button>
          </div>
        </div>
      </div>
    `;
    document.body.appendChild(modal);
    
    modal.addEventListener('click', (e) => {
      if (e.target === modal) closeModal();
    });
  }

  function contactUs() {
    alert('ðŸ“§ Coming soon: Direct demo scheduling! For now, check out our features below.');
    closeModal();
    document.querySelector('#features').scrollIntoView({ behavior: 'smooth' });
  }

  function closeModal() {
    const modals = document.querySelectorAll('.fixed.inset-0');
    modals.forEach(modal => modal.remove());
  }

  // Add keyboard support for modals
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') closeModal();
  });

  // Add parallax effect to background elements
  window.addEventListener('scroll', () => {
    const scrolled = window.pageYOffset;
    const parallaxElements = document.querySelectorAll('.absolute.opacity-20 > div');
    
    parallaxElements.forEach((el, index) => {
      const speed = 0.5 + (index * 0.1);
      el.style.transform = `translateY(${scrolled * speed}px)`;
    });
  });
</script>
